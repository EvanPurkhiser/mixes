	a.listen
		display: inline-block
		border-radius: 2px
		background: #4EC34B
		color: #FFF
		padding: 0 8px

	.stats
		float: right
		list-style: none
		margin: 0
		padding: 0

		li
			float: left
			display: inline-block
			margin-left: 10px

			&:first-child
				margin-left: 0
